<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.h3c.iclouds.po.WorkRole" table="iyun_flow_workRole">
        <id name="id" type="string">
            <column name="id" length="50" />
            <generator class="uuid.hex" />
        </id>
        <property name="workFlowId" type="string" update="false">
            <column name="workFlowId" length="50"/>
        </property>
        <property name="roleKey" type="string" update="false">
            <column name="roleKey" length="50"/>
        </property>
        <property name="processSegment" type="string">
            <column name="processSegment" length="50"/>
        </property>
        <property name="processName" type="string">
            <column name="processName" length="50"/>
        </property>
        <property name="level" type="integer">
            <column name="level"/>
        </property>
        <property name="roleId" type="string">
            <column name="roleId" length="50"/>
        </property>
        <property name="isSameDept" type="string">
            <column name="isSameDept" length="50"/>
        </property>
        <property name="remark" type="string">
            <column name="remark" length="500"/>
        </property>
        <property name="groupId" type="string">
            <column name="GroupID" length="50" />
        </property>
        <property name="createdBy" type="string" update="false">
            <column name="CreatedBy" length="36"/>
        </property>
        <property name="createdDate" type="timestamp" update="false">
            <column name="CreatedDate" length="19"/>
        </property>
        <property name="updatedBy" type="string">
            <column name="UpdatedBy" length="36"/>
        </property>
        <property name="updatedDate" type="timestamp">
            <column name="UpdatedDate" length="19" />
        </property>
        <property name="updatedByName" type="string" formula="(select t.userName from iyun_sm_user t where t.id = UpdatedBy)"/>
		<property name="createdByName" type="string" formula="(select t.userName from iyun_sm_user t where t.id = CreatedBy)"/>
        <property name="workFlowName" type="string" formula="(select ut.name from iyun_flow_workflow ut where ut.id = workFlowId)"/>
        <property name="roleName" type="string" formula="(select ut.roleName from iyun_sm_role ut where ut.id = roleId)"/>
    </class>
</hibernate-mapping>