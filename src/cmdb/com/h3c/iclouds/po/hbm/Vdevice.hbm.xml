<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.h3c.iclouds.po.Vdevice" table="cmdb_netdevice_vdevices">
        <id name="id" column="id">
            <generator class="uuid.hex"/>
        </id>
        <property name="stackId" column="stackid" update="false"/>
        <property name="vassetName" column="vassetname" update="false"/>
        <property name="ncore" column="ncore" update="false"/>
        <property name="memTotal" column="memtotal" update="false"/>
        <property name="ip" column="ip" update="false"/>
        <property name="mac" column="mac"/>
        <property name="utility" column="utility"/>
        <property name="masterId" column="masterid"/>
        <property name="remark" column="remark"/>
        <property name="tenant" column="tenant"/>
        <property name="community" column="community"/>
        <property name="portName" column="portname"/>
        <property name="stackName" formula="(SELECT g.stackname FROM cmdb_netdevice_groups g WHERE g.id = stackid)" />
        <property name="masterName" formula="(SELECT m.assetname FROM cmdb_asm_master m WHERE m.id = masterid)" />
        <property name="tenantName" formula="(SELECT p.name FROM iyun_keystone_project p WHERE p.id = tenant)" />
        <property name="assetTypeId" formula="(SELECT g.asstype FROM cmdb_netdevice_groups g WHERE g.id = stackid)" />
        <property name="createdBy" type="string" update="false">
            <column name="createdBy" length="36"/>
        </property>
        <property name="createdDate" type="timestamp" update="false">
            <column name="createdDate" length="19"/>
        </property>
        <property name="updatedBy"  type="string">
            <column name="updatedBy" length="36"/>
        </property>
        <property name="updatedDate" type="timestamp">
            <column name="updatedDate" length="19"/>
        </property>
    </class>
</hibernate-mapping>