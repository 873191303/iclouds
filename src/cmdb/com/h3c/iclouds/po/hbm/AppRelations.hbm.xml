<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.h3c.iclouds.po.AppRelations" table="cmdb_app_relations">
        <id name="id">
            <column name="id" sql-type="varchar(36)" length="36"/>
            <generator class="uuid.hex" />
        </id>
        <property name="viewId">
            <column name="viewid" sql-type="varchar(36)" length="36"/>
        </property>
        <property name="appId">
            <column name="appid" sql-type="varchar(36)" length="36"/>
        </property>
        <property name="previous">
            <column name="previous" sql-type="varchar(36)" length="36"/>
        </property>
        <property name="sequence" type="int">
            <column name="sequence"/>
        </property>
        <property name="itemType"
                  formula="(SELECT item.itemtype FROM cmdb_app_items item WHERE item.id = appid)"/>
    </class>
</hibernate-mapping>