<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.h3c.iclouds.po.Policie" table="iyun_fw_policie">
        <id name="id">
            <column name="id" sql-type="varchar(50)" length="50"/>
            <generator class="uuid.hex"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="description">
            <column name="description" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="tenantId">
            <column name="tenant_id" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="status">
            <column name="status" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="shared">
            <column name="shared" sql-type="bool"/>
        </property>
        <property name="audited">
            <column name="audited" sql-type="bool"/>
        </property>
        <property name="deleted">
            <column name="deleted" sql-type="varchar(32)" length="32"/>
        </property>
        <property name="deleteBy">
            <column name="deleteby" sql-type="varchar(36)" length="36"/>
        </property>
        <property name="cloudosId" type="string">
            <column name="cloudos_id" length="50" />
        </property>
        <property name="createdBy">
            <column name="createdby" sql-type="varchar(36)" length="36"/>
        </property>
        <property name="createdDate">
            <column name="createddate" sql-type="timestamp"/>
        </property>
        <property name="updatedBy">
            <column name="updatedby" sql-type="varchar(36)" length="36"/>
        </property>
        <property name="updatedDate">
            <column name="updateddate" sql-type="timestamp"/>
        </property>
        <property name="fwId" type="string"
                  formula="(SELECT f2p.firewareId FROM iyun_vdc_fw2policie f2p WHERE f2p.policieId = id)"/>
    </class>
</hibernate-mapping>