<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xmlns:mvc="http://www.springframework.org/schema/mvc"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="
        http://www.springframework.org/schema/beans     
        http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.0.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">
        
    <bean id="springSwaggerConfig" class="com.mangofactory.swagger.configuration.SpringSwaggerConfig" />
    <bean id="swaggerConfig" class="com.h3c.iclouds.base.SwaggerConfig" />
    
 	<!-- 自动扫描的包名 -->
 	<context:component-scan base-package="com.h3c.iclouds.rest" />
 	<context:component-scan base-package="com.h3c.iclouds.auth.*" />
 	<!-- 默认采用注解映射 -->
 	<mvc:annotation-driven />
	
	<!-- 对静态资源文件的访问 不支持访问WEB-INF目录 --> 
	<mvc:default-servlet-handler/>  
	
	<mvc:resources mapping="/config/**" location="/config/" />
	<!-- 视图解释类 -->
	<bean class="org.springframework.web.servlet.view.UrlBasedViewResolver">
		<property name="viewClass"
			value="org.springframework.web.servlet.view.JstlView"></property>
		<property name="prefix" value="/jsp/"></property>
		<property name="suffix" value=".jsp"></property>
	</bean>
	<!-- 拦截器 验证是否登录用 -->
 	<mvc:interceptors>    
	    <bean id="permsInterceptor" class="com.h3c.iclouds.auth.PermsInterceptor" />
	</mvc:interceptors>
	
</beans>